<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.NoteProfileDetailActivity">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:elevation="40dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backKey"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:tint="@color/moilGreen" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deYear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="19"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:text="기"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="최원빈"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="109dp"
            android:layout_margin="14dp"
            android:background="@color/backGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_bookmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/main">


        <TextView
            android:id="@+id/deBirthDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="2000.04.25"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/dePhoneNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="010-5745-1727"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/deEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="wonbinchoi0425@gmail.com"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/deFaxNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="1234567"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="26dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="직장"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/deCompany"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="23dp"
            android:layout_weight="15"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="LINK"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="26dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="부서"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/deDepartment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="23dp"
            android:layout_weight="15"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="제품개발부서(디자인)"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="26dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="직급"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/deComPosition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="23dp"
            android:layout_weight="15"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="팀장"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"

            android:gravity="center"
            android:text="주소"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/deComAdr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="15"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="경기도 수원시 권선구"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/deCompanyWeb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="15"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="https://www.hanaw.com/"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/moilGreen"
            android:text="전화걸기"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />


    </LinearLayout>