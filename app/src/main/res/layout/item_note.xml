<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="20dp"
    android:paddingStart="8dp"
    android:paddingBottom="8dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/noteImage"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@color/backGray"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/noteYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/notosanskrregular"
        android:text="00기"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/noteImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/notosanskrmedium"
        android:text="ㅇㅇㅇ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/noteYear"
        app:layout_constraintStart_toEndOf="@id/noteYear"
        app:layout_constraintTop_toTopOf="@id/noteYear" />

    <ImageView
        android:id="@+id/phoneImage"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_phone_number"
        app:layout_constraintStart_toStartOf="@id/noteYear"
        app:layout_constraintTop_toBottomOf="@id/noteYear" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000-0000-0000"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@id/phoneImage"
        app:layout_constraintStart_toEndOf="@id/phoneImage"
        app:layout_constraintTop_toTopOf="@id/phoneImage" />

    <ImageView
        android:id="@+id/mailImage"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_email_adress"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/noteYear"
        app:layout_constraintTop_toBottomOf="@id/phoneImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="djsgjsdkj123@gmail.com"
        app:layout_constraintBottom_toBottomOf="@id/mailImage"
        app:layout_constraintStart_toStartOf="@id/phoneNumber"
        app:layout_constraintTop_toTopOf="@id/mailImage" />

    <ImageView
        android:id="@+id/companyImage"
        android:layout_width="12dp"
        android:layout_height="9.43dp"
        android:src="@drawable/ic_position"
        android:scaleType="fitCenter"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="@id/noteYear"
        app:layout_constraintTop_toBottomOf="@id/mailImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Link"
        app:layout_constraintBottom_toBottomOf="@+id/companyImage"
        app:layout_constraintStart_toStartOf="@id/phoneNumber"
        app:layout_constraintTop_toTopOf="@+id/companyImage" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginEnd="13.2dp"
        android:paddingTop="-8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_bookmark"/>


</androidx.constraintlayout.widget.ConstraintLayout>