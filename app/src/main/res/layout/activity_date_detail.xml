<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="40dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:tint="@color/moilGreen" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/notosanskrmedium"
            android:gravity="center"
            android:text="4월 25일 월"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:background="@color/backGray">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="16dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="19기동창회 일정 안내드립니다."/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/noticeText"
            android:layout_width="match_parent"
            android:layout_height="435dp"
            android:background="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@id/selectUpDown"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <LinearLayout
            android:id="@+id/selectUpDown"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="9dp"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_arrow_up_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="9dp"
                    android:text="다음글"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_marginStart="12dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="9dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_arrow_down_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="9dp"
                    android:text=" 이전글"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_marginStart="12dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>



            </LinearLayout>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>